<div id="{{ id|raw }}"
     class="hide-in-sortmode"
     data-property='{{ property|json_encode }}'
     data-mapper-property="{{ property.name }}"
     data-aura-component="smart-content@sulucontent"
     data-aura-title="{{ property.getTitle(userLocale) }}"
     data-type="smartContent"
     data-type-instance-name="{{ id|raw }}"
     data-instance-name="{{ id|raw }}"
     data-form="true"
     data-aura-hide-categories="{% if params.has_categories %}false{% else %}true{% endif %}"
     data-aura-hide-tags="{% if params.has_tags %}false{% else %}true{% endif %}"
     data-aura-hide-data-source="{% if params.has_datasource %}false{% else %}true{% endif %}"
     data-aura-hide-sort-by="{% if params.has_sorting %}false{% else %}true{% endif %}"
     data-aura-hide-limit="{% if params.has_limit %}false{% else %}true{% endif %}"
     data-aura-hide-present-as="{% if params.has_present_as %}false{% else %}true{% endif %}"
     data-aura-column-navigation-url="/admin/api/nodes?{id=dataSource&}tree=true{% if webspaceKey != '' %}&webspace={{ webspaceKey }}{% endif %}&language={{ languageCode }}&webspace-node=true"
     data-aura-present-as='{{ sulu_parameter_to_select(params.present_as.value, userLocale)|json_encode }}'
     data-aura-result-key="items"
     data-aura-tags-result-key="tags"
     data-aura-column-navigation-result-key="nodes"
     data-aura-url="/admin/api/items?{% if webspaceKey != '' %}webspace={{ webspaceKey }}&{% endif %}locale={{ languageCode }}&excluded=<%= options.id %>&provider={{ params.provider.value }}"
     data-aura-tags-auto-complete-url="/admin/api/tags?flat=true&sortBy=name&searchFields=name"
     data-aura-sort-by='[{"id":"title","name":"<%= translate("smart-content.title") %>"},{"id":"published","name":"<%= translate("public.published") %>"},{"id":"created","name":"<%= translate("public.created") %>"},{"id":"changed","name":"<%= translate("public.changed") %>"}]'></div>
