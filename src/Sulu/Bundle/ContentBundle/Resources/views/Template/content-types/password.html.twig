<div id="{{ id|raw }}"
     data-property='{{ property|json_encode }}'
     data-mapper-property="{{ property.name }}"
     data-aura-component="input@husky"
     data-aura-skin="password"
     data-aura-instance-name="{{ id|raw }}"
     data-aura-input-id="{{ id|raw }}"
     data-type="husky-input"
     data-form="true"
     {% if property.mandatory %}data-validation-required="true"{% endif %}></div>
