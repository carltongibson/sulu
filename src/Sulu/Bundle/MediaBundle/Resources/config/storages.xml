<?xml version="1.0" encoding="utf-8"?>
<container xmlns="http://symfony.com/schema/dic/services" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">
    <parameters>
        <parameter key="sulu_media.storage_manager.class">Sulu\Bundle\MediaBundle\Media\StorageManager\StorageManager</parameter>
        <parameter key="sulu_media.storage.adapter.local.class">Sulu\Bundle\MediaBundle\Media\Storage\LocalStorage</parameter>
    </parameters>
    <services>
        <!-- Manager -->
        <service id="sulu_media.storage_manager" class="%sulu_media.storage_manager.class%">
            <argument>%sulu_media.storage.default%</argument>
            <argument type="service" id="logger"/>
        </service>

        <!-- Local Storage -->
        <service id="sulu_media.storage.adapter.local" class="%sulu_media.storage.adapter.local.class%" abstract="true" public="false">
            <argument /><!-- uploadPath -->
            <argument>10</argument><!-- segments -->
            <argument type="service" id="logger"/>
            <tag name="sulu_media.storage_adapter" alias="local" />
        </service>

        <!-- Flysystem Storage is added in StorageCompilerPass -->
    </services>
</container>
